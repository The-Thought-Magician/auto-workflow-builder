# Rename this file to .env and fill in the values to configure the backend.

# Server settings
PORT=3001

# Database connection string for PostgreSQL used by Prisma. The format is:
# postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@db:5432/ai_workflow

# JWT secret used for signing authentication tokens. Use a long random string.
JWT_SECRET=your_jwt_secret_here

# Secret key used for encrypting credential data. Use a long random string.
ENCRYPTION_KEY=your_encryption_key_here

# n8n API configuration. These values are required for creating and managing
# workflows through the n8n REST API. If you are not using n8n integration you
# can leave these empty, but workflow operations will fail.
N8N_API_URL=http://n8n:5678
N8N_API_KEY=

# n8n MCP server URL (optional). If provided, some operations may leverage MCP
# tools for advanced features. Leave blank if not using MCP directly.
N8N_MCP_URL=http://n8n-mcp:3000

# OpenRouter configuration. These values allow the chat endpoint to call
# OpenRouter for LLM completions. You need to obtain an API key from
# https://openrouter.ai/ and optionally specify a default model.
OPENROUTER_API_KEY=
OPENROUTER_DEFAULT_MODEL=openai/gpt-3.5-turbo
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1